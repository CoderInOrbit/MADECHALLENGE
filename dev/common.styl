@import "jeet"

@font-face
	font-family: 'Oswald';
	src: url('fonts/Oswald.eot'); /* IE9 Compat Modes */
	src: url('fonts/Oswald.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */ url('fonts/Oswald.woff') format('woff'), /* Modern Browsers */ url('fonts/Oswald.ttf')  format('truetype'), /* Safari, Android, iOS */url('fonts/Oswald.svg#06e91909362921b8a6ebe38382ac36f9') format('svg'); /* Legacy iOS */
	font-style:   normal;
	font-weight:  400;

html,body
	min-height: 100%; height: 100%; margin: 0; padding: 0;
body
	min-height: 100%; overflow-x: hidden;
	#pyramades
		overflow: visible; height: 100%; width: 100%; transform: scale(1.35); transform-origin: 50%; background: #51bc9b;
		.view > g
			opacity: 0;
			polygon, .info
				transform-origin: center; transition: all .2s ease; backface-visibility: hidden; transform-style: preserve-3d;
			.front
				transform-origin: center;
			.back
				transform: rotateY(90deg); transform-origin: center;
				polygon
					fill:white;
			.info
				transform: rotateY(270deg); font-family: "Oswald", sans-serif; fill: #244242; text-transform: uppercase;
				a:hover
					opacity:.6;
		g.on
			opacity: 1;
		.blank polygon
			fill: #7acfa6;
	
// CSS TRANSFORMS SVG FIXES FOR FIREFOX
@media screen and (-moz-images-in-menus:0)
	body #pyramades .view > g .info, body #pyramades .view > g .back
		transform: rotateY(0); opacity:0;
		
@media screen and (max-width: 900px)
	body #pyramades
		transform: scale(2);